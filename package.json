{
  "name": "@himanshurank/uno",
  "version": "0.0.1",
  "description": "Uno game rules engine.",
  "main": "./lib/index.js",
  "types": "./lib/types/index.d.ts",
  "type": "module",
  "files": [
    "lib/**/*"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "types": "./lib/types/index.d.ts"
    }
  },
  "scripts": {
    "clean": "rimraf lib",
    "build": "npm run clean && tsc",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepack": "npm run build",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "uno",
    "card-game",
    "rules-engine"
  ],
  "author": "Himanshu Rank",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.19",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "release": {
    "branches": [
      "main"
    ]
  }
}
